<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfit.mvc.model.dao.ReviewDao">
	
	<select id="getReviewByQuestId" resultType="Review">
		SELECT * FROM review WHERE questId=#{id}
	</select>
	
	<insert id="insertReview" parameterType="Review">
		INSERT INTO review (quest_id, difficulty)
		VALUES (#{questId}, #{difficulty})
	</insert>
	
	<delete id="deleteReview" parameterType="int">
		DELETE FROM review WHERE id=#{id}
	</delete>
	
	<update id="updateReview" parameterType="Review">
		UPDATE review
		SET quest_id=#{questId}, difficulty=#{difficulty}
		WHERE id=#{questId}
	</update>
	
</mapper>