<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfit.mvc.model.dao.ReviewDao">
	
	<!-- 리뷰 존재 여부 확인 -->
	<select id="reviewExists" resultType="int" parameterType="int">
		SELECT COUNT(*)
		FROM review
		WHERE quest_id=#{questId}
	</select>
	
	<!-- 리뷰 불러오기 -->
	<select id="getReviewByQuestId" resultType="Review">
		SELECT * 
		FROM review 
		WHERE quest_id=#{questId}
	</select>
	
	<!-- 리뷰 삽입 -->
	<insert id="insertReview" parameterType="Review">
		INSERT INTO review (quest_id, difficulty)
		VALUES (#{questId}, #{difficulty})
	</insert>
	
	<!-- 리뷰 삭제 -->
	<delete id="deleteReview" parameterType="int">
		DELETE FROM review 
		WHERE quest_id=#{questId}
	</delete>
	
	<!-- 리뷰 수정 -->
	<update id="updateReview" parameterType="map">
		UPDATE review
		SET difficulty=#{difficulty}
		WHERE quest_id=#{questId}
	</update>
	
</mapper>